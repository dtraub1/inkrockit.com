# Nginx Configuration for inkrockit.com
# Location on server: /etc/nginx/sites-available/inkrockit.com
#
# This is a REFERENCE configuration showing the current production setup.
# DO NOT edit this file expecting changes to take effect.
# To modify Nginx config, SSH to server and edit the actual file.

# HTTPS Server Block (Production)
server {
    server_name inkrockit.com www.inkrockit.com;

    # Document root for the static Nuxt.js site
    root /var/www/inkrockit.com;
    index index.php index.html;

    # Logging
    access_log /var/log/nginx/inkrockit.com-access.log;
    error_log /var/log/nginx/inkrockit.com-error.log;

    # Main location block - try files first, then fall back to PHP
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP-FPM processing
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Deny access to .htaccess files
    location ~ /\.ht {
        deny all;
    }

    # SSL Configuration (managed by Certbot)
    listen [::]:443 ssl ipv6only=on;
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/inkrockit.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/inkrockit.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

# HTTP Server Block - Redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name inkrockit.com www.inkrockit.com;

    # Redirect all HTTP traffic to HTTPS (managed by Certbot)
    if ($host = www.inkrockit.com) {
        return 301 https://$host$request_uri;
    }

    if ($host = inkrockit.com) {
        return 301 https://$host$request_uri;
    }

    return 404;
}

